<!-- Loop over each object in the projects array -->
{{#each recipes as |recipe| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/api/recipe/{{recipe.id}}">{{recipe.title}}</a>
    </h2>
    <p>Created by {{recipe.created_user_id.user}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.ingredients}}
    </p>
  </div>
    <div class="col-md-7">
    <p>
      {{recipe.instructions}}
    </p>
  </div>
</div>
{{/each}}