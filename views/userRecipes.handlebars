{{!-- User Page --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="#recipe-title">recipe name:</label>
        <input class="form-input" type="text" id="recipe-title" name="recipe-title" />
      </div>
      <div class="form-group">
        <label for="#recipe-ingredients">ingredients:</label>
        <input class="form-input" type="text" id="recipe-ingredients" name="recipe-ingredients" />
      </div>
      <div class="form-group">
        <label for="#recipe-instructions">instructions:</label>
        <textarea class="form-input" id="recipe-instructions" name="recipe-instructions"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 recipeList">
    <h3>Posted Recipes:</h3>

    {{#each recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/api/recipe/{{recipe.id}}">{{recipe.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="{{recipe.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
